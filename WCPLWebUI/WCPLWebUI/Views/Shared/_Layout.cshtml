<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <style type="text/css">
        .text-xl {
            font-size: 2em;
        }

        .text-crimson {
            color: crimson;
        }

        body {
            background: black url('../../Content/images/bgtile.png') repeat;
        }

        .navbar-inverse {
            background-color: black;
        }

        .navbar-brand {
            padding: 0px;
        }

            .navbar-brand > img {
                height: 50px;
                padding: 0;
                width: auto;
            }

        .body-content {
            padding-top: 15px;
            background-color: white;
        }

        .aces {
            position: fixed;
            bottom: -30px;
            right: -25px;
        }

        .medallion {
            position: fixed;
            bottom: -50px;
            left: 0;
        }
    </style>
    <script type="text/javascript">
        function showErrorMessage(sCall, sType, sError, jqXHR) {
            //Temporary
            alert(sError);
        }
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand">
                    <img src="~/Content/images/wcpl.jpg" alt="West Coast Poker League" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Games", "Index", "Games")</li>
                    <li>@Html.ActionLink("Events", "Index", "Events")</li>
                    <li><a href="https://www.travispokertimer.com/league/wcplpmp" target="_blank">Leaderboard</a></li>
                    <li><a href="~/Content/documents/rules.pdf" target="_blank">Rules</a></li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <img class="aces hidden-xs" src="~/Content/images/aces.svg" />
        <img class="medallion hidden-xs" src="~/Content/images/wcplmedallion.png" />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - West Coast Poker League</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
